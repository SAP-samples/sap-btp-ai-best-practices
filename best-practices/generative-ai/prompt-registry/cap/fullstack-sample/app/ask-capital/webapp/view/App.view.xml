<mvc:View xmlns:core="sap.ui.core" controllerName="ui5.typescript.askcapital.controller.App" displayBlock="true"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">

	<App id="app">
		<Page title="Country Capital Finder" id="page" class="sapUiResponsiveContentPadding">
			<content>
				<VBox alignItems="Center" class="sapUiMediumMarginTop">
					<HBox alignItems="Center" class="sapUiMediumMarginBottom">
						<Input id="inputCountry" value="United States" submit="onSubmit" width="200px" />
						<Button text="Find Capital" press="onSubmit" type="Emphasized" class="sapUiSmallMarginBegin" />
					</HBox>
					<Text id="resultText" class="sapUiLargeFontSize" visible="false" />
				</VBox>
			</content>
		</Page>
	</App>

</mvc:View>