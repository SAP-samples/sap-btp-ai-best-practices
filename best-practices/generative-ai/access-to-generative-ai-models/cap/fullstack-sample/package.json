{
  "name": "fullstack-sample-test",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@sap-ai-sdk/ai-api": "^1.10.0",
    "@sap-ai-sdk/foundation-models": "^1.10.0",
    "@sap-ai-sdk/orchestration": "^1.10.0",
    "@sap/cds": "^8",
    "@sap/xssec": "^4",
    "express": "^4"
  },
  "devDependencies": {
    "@cap-js/cds-test": "^0",
    "@cap-js/cds-typer": ">=0.1",
    "@cap-js/cds-types": "^0.9.0",
    "@sap/cds-dk": "^8",
    "@types/node": "^22.0.0",
    "tsx": "^4.19.3",
    "typescript": "^5"
  },
  "scripts": {
    "start": "cds-serve",
    "start:ui5": "npm run start --prefix app/ask-capital",
    "watch": "cds-tsx w --profile hybrid",
    "debug": "cds-tsx w --profile hybrid --debug",
    "before:cds-watch": "cds-typer \"*\"",
    "build": "mbt build",
    "build:ui5": "npm run build --prefix app/ask-capital",
    "deploy": "cf deploy mta_archives/fullstack-sample-test_1.0.0.mtar"
  },
  "workspaces": [
    "app/*"
  ],
  "imports": {
    "#cds-models/*": "./@cds-models/*/index.js"
  },
  "sapux": [
    "app/ask-capital"
  ],
  "cds": {
    "cdsc": {
      "newParser": true
    },
    "requires": {
      "[production]": {
        "auth": "xsuaa"
      }
    },
    "build": {
      "target": "gen",
      "tasks": [
        {
          "for": "nodejs"
        },
        {
          "for": "typescript"
        }
      ]
    },
    "typer": {
      "output_directory": "@cds-models",
      "use_entities_proxy": true
    }
  }
}
