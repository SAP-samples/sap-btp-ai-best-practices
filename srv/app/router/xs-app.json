{
  "authenticationMethod": "route",
  "logout": {
    "logoutEndpoint": "/logout",
    "logoutPage": "https://sap-samples.github.io/sap-btp-ai-best-practices"
  },
  "routes": [
    {
      "source": "^/logoutSuccess(.*)$",
      "target": "$1",
      "destination": "srv-api",
      "authenticationType": "none"
    },
    {
      "source": "^/(.*)$",
      "target": "$1",
      "destination": "srv-api",
      "csrfProtection": true
    }
  ]
}
