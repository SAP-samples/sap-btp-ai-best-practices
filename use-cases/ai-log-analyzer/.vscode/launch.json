{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "cds watch hybrid",
      "request": "launch",
      "type": "node",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "cds",
      "args": [
        "watch",
        "--profile",
        "hybrid",
        "--with-mocks",
        "--in-memory?"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ],
      "env": {
        "DEBUG": "cds.remote" // so we can see requests sent to API hub. if not enough you can debug through js code. look for httpClient class and try out in postman
      }
    },
    {
      "name": "cds watch in memory",
      "request": "launch",
      "type": "node",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "cds",
      "args": [
        "watch",
        "--with-mocks",
        "--in-memory?"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ],
      "env": {
        "DEBUG": "cds.remote" // so we can see requests sent to API hub. if not enough you can debug through js code. look for httpClient class and try out in postman
      }
    },
    {
      "name": "cds serve",
      "request": "launch",
      "type": "node",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "cds",
      "args": [
        "serve",
        "--with-mocks",
        "--in-memory?"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ]
    }
  ]
}