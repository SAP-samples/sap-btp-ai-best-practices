<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:macros="sap.fe.macros">
  <Panel headerText="Assessment Details" expandable="true">
    <content>
      <VBox class="sapUiSmallMargin">
        <Title text="Summary" level="H3" />
        <Text text="{summary}" wrapping="true" />

        <Title text="Priority" level="H3" />
        <Text text="{priority}" wrapping="true" />

        <Title text="Next Steps" level="H3" />
        <Text text="{nextSteps}" wrapping="true" />

        <Title text="Configuration Changes" level="H3" />
        <Text text="{configurationChanges}" wrapping="true" />

        <Title text="Root Cause" level="H3" />
        <Text text="{rootCause}" wrapping="true" />
      </VBox>
    </content>
  </Panel>
</core:FragmentDefinition>